.grid
  column-count 2
  +above(tablet)
    column-count 3

.grid-item
  position relative
  margin 0 0 15px 0
  display inline-block
  vertical-align top
  width 100%
  padding 4px

  +above(tablet)
    padding 10px

  img
    max-width 100%
    height auto


.slick-next
  position absolute
  top 0
  right 0

.slick-arrow
  -webkit-appearance none
  background none
  border 0
  opacity .5

  &:hover
    opacity 1