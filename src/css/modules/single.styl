.single
  .post-body
    background rgba(white, .9)
    padding 40px 20px
    border-radius 4px

    +above(tablet)
      padding 40px 60px

    h1
      margin-bottom 2rem

  .post-body__content
    max-width 725px
  
  &.single-restaurant,
  &.single-menu,
  &.single-gift_certificates,
  &.single-event
    .content-wrapper
      padding-top 110px

      +above(desktop)
        padding-top 20px

    .grid
      padding-top 20px
      +above(tablet)
        column-count 2