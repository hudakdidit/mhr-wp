.content-wrapper
  padding 20px 20px 60px
  min-height 100%

.single-restaurant .content-wrapper,
.single-gift_certificates .content-wrapper
  +above(tablet)
    padding-top 100px

.post-type-page
  max-width $max-content-width
  margin auto
  border-radius 4px
  +above(tablet)
    padding 40px

  p
    max-width 750px

  .row
    +above(tablet)
      display flex

.page-image
  +above(tablet)
    padding-left 2em
.page-image img
  max-width 100%
  border 1em white solid
