.mhr-cards-container
  background rgba(white, .95)
  border-radius 4px
  padding-bottom 20px
  margin-bottom 100px
  +above(tablet)
    background rgba(white, .5)

.mhr-card__content
  +above(tablet)
    min-height 250px

.mhr-card
  margin 40px 10px
  max-width 600px
  width 100%

  +above(tablet)
    padding 10px
    margin 0

  +above(desktop)
    flex 1 0 (100 / 4)%

  h2, h3
    font-weight 300
    color $dark
  
  h2
    margin-bottom .5rem
    font-size 1.75rem
  // p
  //   max-width 300px
p
  line-height 1.5
  margin-bottom 1rem
  font-weight 200


  a
    font-weight 400
    text-decoration underline

.mhr-card__border
  background rgba(white, .95)
  box-shadow 0 3px 7px -3px rgba(black, .15)
  padding 15px
  border-radius 4px
  transition 200ms box-shadow ease-out-quart

  +above(desktop)
    background rgba(white, .8)
    
  &:hover
    box-shadow 0 3px 10px -3px rgba(black, .25)

.mhr-card .mhr-card__content
  background-size cover
  background-position center
  background-repeat no-repeat
  justify-content space-between

.mhr-card--restaurant .mhr-card__content
  +above(tablet)
    display flex
    align-items stretch

.mhr-card__info
  // flex 0 0 70%
  padding 20px

.mhr-card__link
  padding 20px 0
  display flex
  justify-content space-between
  align-items center
  align-content center
  text-align center
  flex-direction column
  +above(desktop)
    flex-direction row


  .logo
    margin-bottom 1rem
    flex 0 0 auto
    display block

.mhr-card__info,
.mhr-card__link
  +above(tablet)
    display flex
    flex-direction column
    justify-content space-between

.mhr-card--tilth .mhr-card__content
  .logo
    +above(tablet)
      margin 0 auto 1em

  .mhr-card__link
    min-width 150px

.mhr-card--golden-beetle
  .logo
    width 180px

.mhr-card--agrodolce .mhr-card__content
  .logo
    height 50px

&.mhr-card--catering
  // max-width 800px


&.mhr-card--catering .mhr-card__content
  +above(tablet)
    justify-content space-between
    height auto
    padding-right 20px

    .mhr-card__info
      // flex 0 0 60%

    .col:last-child
      min-width 150px
      text-align center

  // .logo
  //   height 70px

.mhr-card--catering .mhr-card__content
  .col
    margin-bottom 1rem
  +above(tablet)
    display flex

    .col
      margin-bottom 0
      display flex
      flex-direction column
      align-content center
      justify-content center

.mhr-card--featured-person .mhr-card__content
  color $dark
  display flex
  justify-content space-between

  &::after
    display none

  .col
    display flex
    flex-direction column
    align-content center
    justify-content center

    &:last-child
      align-items center

    &:first-child
      flex 0 0 70%
      +above(tablet)
        flex 0 0 55%

    p:last-child
      margin 0

    img
      vertical-align top

  .row
    +above(tablet)
      display flex
      align-items center
      justify-content center
      margin-bottom 1rem

  .caption
    font-size 14px
    margin-bottom 1rem
    +above(tablet)
      padding 0 .5rem

  a
    width 100px
    color $dark
    +above(tablet)
      width auto
      link-style()

.portrait
  width 100px
  height 100px
  border-radius 50%
  +above(tablet)
    width 150px
    height 150px


  // background rgba(white, .8)
  // padding 20px 10px
  // overflow hidden
  color $dark
  position relative

  & *
    position relative
    z-index 3

  a
    color $dark

  h2
    margin-bottom 1rem
    font-weight 400
    font-size 2rem

  h3
    margin-bottom 1rem
    font-weight 200
    line-height 1.35

  .address,
  .telephone
    line-height 1.5
    font-weight 200

.mhr-card__special-events
  padding 0 20px 0

.mhr-card--social
  margin-bottom 100px

.mhr-card--social .mhr-card__content
  font-size 1.15rem
  +above(tablet)
    font-size 1.5rem
    display flex
    flex-direction column
    justify-content space-between

  a
    link-style()
    text-decoration none

    span
      display block

.mhr-card.mhr-card--young-american-ale-house
  height auto
  flex none
  +above(1000px)
    max-width 60%

  .mhr-card__link
    width 300px

  .mhr-card__content
    height auto
    +above(tablet)
      display flex
      align-items center

    h3
      max-width none

  .logo--young-american-ale-house
    width 150px

  .screen-reader
    visibility hidden
    height 0
