
.reservations-bubble
  position fixed
  z-index 10
  bottom 0
  left 0
  right 0
  width 100%
  text-align center
  background $tilth
  color white
  font-size 14px
  font-weight 700
  text-transform uppercase
  text-decoration none
  border-top 2px solid darken($dark, 50%)
  letter-spacing .125rem
  box-shadow 0 5px 10px -2px rgba(black, .75)
  padding 0 20px
  height 50px
  line-height 50px
  transition background 200ms ease-out-quart, box-shadow 100ms ease-out-quart

  &:hover,
  &:active
    background lighten($tilth, 10%)
    box-shadow 0 5px 10px -2px rgba(black, .8)

  +above(desktop)
    border-top none
    border-radius 4px
    top 80%
    right 10%
    transform translateY(-25px)
    width auto
    left auto

.min-toggle
  display inline-block
  position absolute
  z-index 4
  top 50%
  transform translateY(-50%)
  right 0
  width 80px
  height 80px
  padding 20px
  flex none
  +above(desktop)
    display none


$nav-height = 84px

.navigation
  background rgba(white, .98)
  box-shadow 0 5px 10px -3px rgba(black .5)
  position fixed
  z-index 15
  width 100%

  +above(desktop)
    padding 10px 20px 10px 10px

  .logo
    height auto


  &::after
    content ''
    position absolute
    top 0
    left 0
    width 100%
    height 84px
    background white
    z-index 3
    box-shadow 0 5px 10px -7px rgba(black, .25)

    +above(tablet)
      display none
  
  +above(desktop)
    margin 20px
    border-radius 4px
    padding 20px
    position relative
    width calc(100% - 40px)
    box-shadow none
    background none

  a
    link-style()
    color $dark
    padding 1rem
    display inline-block
    text-decoration none
    font-weight 400
    padding-left 1.5em
    width 100%
    display block

    +above(tablet)
      padding 9px 15px

  .logo
    position relative
    z-index 4
    width auto
    img
      height 50px

    +above(desktop)
      margin-right 20px
      padding-left 40px
      img
        height 80px
.navigation-wrapper 
  max-width $max-content-width + 200px
  margin auto

  +above(desktop)
    display flex
    align-items center
    justify-content space-between
    flex-wrap wrap

.primary-nav
  background white
  transition height 300ms ease-out-quart
  position fixed
  z-index 2
  overflow hidden
  padding-top 84px
  height 0px
  width 100%
  max-width 450px
  left auto
  right 0
  top 0

  &.active
    height 100%
    overflow-y scroll
    -webkit-overflow-scrolling touch

  +above(tablet)
    padding-top 64px

  +above(desktop)
    display flex
    max-height none
    flex-basis auto
    overflow visible
    transform none
    background none
    position relative
    height auto
    padding-top 0
    width auto
    max-width none

    &.pin-bottom
      position fixed
      top auto
      bottom 0
      right 0
      z-index 12
      height 64px
      background white
      width 100%
      align-items center
      justify-content center
      padding 10px 10px 0 50px
      align-items stretch
      justify-content flex-start
      width calc(100% - 40px)
      margin 20px 20px 0 20px
      border-top-left-radius 4px
      border-top-right-radius 4px

  & > .nav-link > a
    width 100%
    display block
    +above(desktop)
      display inline-block
      width auto
  
  a[href*="reservations"]
    background rgba($primary, .7)
    color white
    padding 20px 30px

    +above(desktop)
      padding 10px
      border-radius 3px

    &:hover
      background rgba($primary, .9)

    span::after
      background rgba(white, .5)

  .nav-link
    border-top 1px solid rgba($dark, .3)
    +above(desktop)
      margin-right 1rem
      border-top none

      &.dropdown
        margin-right 0

      &.current_page_item > a > span
      .current-restaurant-ancestor > a > span
        font-weight 700

.scroll-indicator
  position absolute
  z-index 11
  top 80%
  left 50%
  transform translate(-50%, -50%)
  width 40px
  height 40px
  background rgba(white, .8)
  border-radius 50%
  text-align center
  line-height 40px
  +above(tablet)
    transform translate(0, -50%)



  &.back-to-top
    cursor pointer
    transform rotate(-180deg) translate(-50%, -50%)
    position fixed
    top auto
    left auto
    right 50px
    top 75%
    display none
    +above(tablet)
      display block

    &:hover
      background white

.single-restaurant .nav-link--restaurants a span
  font-weight 700

.relative-page-nav
  padding 0 0 1em

  .button
    margin-bottom 1em
    +above(tablet)
      margin-bottom 0

.child-page-nav
  +above(tablet)
    display flex
    flex-wrap wrap

.child-page-nav__item
  box-shadow 0 3px 7px -1px rgba(black, .25)
  padding 10px
  background white
  margin 0 20px 20px 0

  &:hover .child-page-nav__item-background
    background-color rgba(black, .25)

.child-page-nav__item-background
  background-blend-mode multiply
  background-size cover
  background-position center
  transition 300ms background ease-out
  display block
  width 350px
  max-width 100%
  height 200px
  display flex
  flex-direction column
  color white
  justify-content center
  align-items center
