.toggle-group
  position relative
  background $secondary
  border-radius 4px
  max-height 48px
  overflow hidden
  transition all 300ms ease
  border 1px solid rgba(black, .2)
  margin-bottom 1em
  max-width 800px

  &.open
    transition all 300ms cubic-bezier(0.55, 0.055, 0.675, 0.19)
    max-height 9999px

.toggle-group__header
  padding 16px
.toggle-group__content
  padding 16px 16px 40px
  +above(desktop)
    padding 16px 40px 40px 16px

.toggle-group__header
  cursor pointer

  .fa
    opacity .5
    margin 0 0 0 1em
    display inline-block

  &:hover .fa
    opacity .75

.toggle-group__content
  border-top 1px solid rgba(black, .2)
