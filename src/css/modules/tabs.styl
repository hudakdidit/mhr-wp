.tabs-group
  background rgba(white, .5)
  border-radius 4px
  margin 0

  &.affix
    +above(tablet)
      position fixed
      top 0
      max-height 100%
      overflow-y auto

.tabs-header a
  font-weight 700
  padding 20px
  display inline-block
  border 1px solid transparent
  position relative
  color $dark
  text-decoration none

  &.active
    border 1px solid $dark
    border-bottom-color white
    background white
    border-top-left-radius 4px
    border-top-right-radius 4px

    &::after
      content ''
      display block
      position absolute
      bottom -2px
      height 2px
      left -1px
      width 100%
      background white
      border-left 1px solid $dark
      border-right 1px solid $dark

      +retina()
        bottom -3px
        height 3px


.tabs-content
  visibility hidden
  height 0
  overflow hidden

  &.active
    visibility visible
    height auto
    overflow hidden
    background white
    border 1px solid $dark
    border-radius 4px
    &.first
      border-top-left-radius 0

  .restaurant-info__container
    padding 40px 20px
